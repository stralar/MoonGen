##############################################################################
SHELL = /bin/sh

prefix        = @prefix@
exec_prefix   = @exec_prefix@

bindir        = @bindir@
mandir        = @mandir@/man8
sbindir       = @sbindir@
srcdir        = @srcdir@

INSTALL  = @INSTALL@ -o root -g root -m 0755
VPATH    = @srcdir@

CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
DEFS     = @DEFS@
LIBS     = @LIBS@
MAN8     = rude.8

RUDE_OBJS = flow_cntl.o flow_txmit.o main.o parse.o

##############################################################################
# Rules for make
##############################################################################
.c.o:
	$(CC) $(CFLAGS) $(DEFS) -c -o $*.o $<

all:	rude

rude:	$(RUDE_OBJS)
	$(CC) $(CFLAGS) $(LIBS) $(DEFS) $(LDFLAGS) -o rude $(RUDE_OBJS)

clean:
	rm -f *~ *.o rude

distclean:
	rm -f *~ *.o rude Makefile

install: rude
	@if [ ! -d $(bindir) ]; then mkdir -m 0755 $(bindir); fi;
	$(INSTALL) rude $(bindir)
	@if [ ! -d $(mandir) ]; then mkdir -m 0755 $(mandir); fi;
	$(INSTALL) rude.8 $(mandir)
 

##############################################################################
